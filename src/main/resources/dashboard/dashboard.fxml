<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.dashboardController">
   <!-- Top Bar with Minimize, Fullscreen, and Exit buttons -->
   <top>
      <HBox fx:id="topBar" alignment="BASELINE_RIGHT" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #081028;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#handleMinimize" prefHeight="26.0" prefWidth="31.0" text=" -" />
            <Button fx:id="resizeButton" mnemonicParsing="false" onAction="#handleResize" prefHeight="26.0" prefWidth="31.0" style="-fx-background-color: transparent;">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/maximize.png" />
                     </image></ImageView>
               </graphic></Button>
            <Button fx:id="exitButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#handleExit" prefHeight="26.0" prefWidth="31.0" text="  X" />
         </children>
      </HBox>
   </top>

   <!-- Left Panel (Sidebar) -->
   <left>
      <VBox prefHeight="452.0" prefWidth="216.0" style="-fx-background-color: #081028;" BorderPane.alignment="CENTER">
         <effect>
            <DropShadow />
         </effect>
      </VBox>
   </left>

   <!-- Main Content Area -->
   <center>
      <VBox minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Label text=" Welcome back, Admin!">
               <font>
                  <Font name="Bookman Old Style" size="24.0" />
               </font>
            </Label>
            <Label text="   ENTER TEXT HERE" />
            <Label text="   DATE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>

            <!-- Graphs (Horizontal Box) -->
            <HBox maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                     <effect>
                        <DropShadow offsetX="3.0" offsetY="3.0" />
                     </effect>
                  </StackPane>
                  <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                     <effect>
                        <DropShadow offsetX="3.0" offsetY="3.0" />
                     </effect>
                  </StackPane>
                  <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                     <effect>
                        <DropShadow offsetX="3.0" offsetY="3.0" />
                     </effect>
                  </StackPane>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>

            <!-- Main Content (Graphs and Recent Activities) -->
            <HBox minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-radius: 15;" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Left Side (Graphs) -->
                  <VBox prefHeight="326.0" prefWidth="453.0" style="-fx-background-radius: 15 0 0 0;" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox prefHeight="122.0" style="-fx-background-color: white; -fx-background-radius: 15 0 0 0; -fx-border-color: black; -fx-border-radius: 15 0 0 0;" VBox.vgrow="ALWAYS" />
                        <VBox prefHeight="134.0" prefWidth="330.0" style="-fx-border-color: black; -fx-background-radius: 0 0 0 15; -fx-background-color: white; -fx-border-radius: 0 0 0 15;" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>

                  <!-- Right Side (Recent Activities) -->
                  <VBox prefHeight="326.0" prefWidth="161.0" style="-fx-border-color: black; -fx-background-radius: 0 15 15 0; -fx-background-color: white; -fx-border-radius: 0 15 15 0;" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" right="10.0" top="15.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
